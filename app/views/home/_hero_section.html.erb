<% hero_data = @hero&.content_data || {} %>
<section class="bg-dada-background text-center dark:bg-dada-darkBg py-16 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <p class="inline-block bg-dada-secondary text-dada-text dark:text-zinc-900 text-sm font-semibold rounded-full px-4 py-1 mb-4">
      <%= hero_data["badge_text"] || "Culturally-Aware Menopause Support" %>
    </p>

    <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-dada-text-light dark:text-dada-text-dark mb-4">
      <%= raw(hero_data["headline"] || "Your Journey Through <span class='text-dada-primary'>Midlife</span> Deserves Support") %>
    </h1>

    <p class="text-lg sm:text-xl text-dada-subtle dark:text-zinc-400 max-w-3xl mx-auto mb-6">
      <%= hero_data["description"] || "Dada offers personalized, culturally-rooted menopause guidance for African women and the diaspora." %>
    </p>

    <div class="flex flex-col sm:flex-row justify-center gap-4 mb-6">
      <% if user_signed_in? %>
        <%= link_to "Go to Dashboard", dashboard_path,
                    class: "inline-block bg-dada-primary hover:bg-dada-accent text-white font-semibold px-6 py-3 rounded-dada transition" %>

        <%= link_to "Explore Circles", web_circles_path,
                    class: "inline-block border border-dada-primary text-dada-primary hover:bg-dada-primary hover:text-white font-semibold px-6 py-3 rounded-dada transition" %>
      <% else %>
        <%= link_to "Start Your Journey", web_onboarding_step1_path,
                    class: "inline-block bg-dada-primary hover:bg-dada-accent text-white font-semibold px-6 py-3 rounded-dada transition" %>

        <%= link_to "Explore Resources", web_contents_path,
                    class: "inline-block border border-dada-primary text-dada-primary dark:text-white dark:border-white hover:bg-dada-primary hover:text-white dark:hover:bg-white dark:hover:text-dada-text font-semibold px-6 py-3 rounded-dada transition" %>
      <% end %>
    </div>

    <div class="flex flex-col sm:flex-row justify-center gap-4 text-sm text-dada-subtle dark:text-zinc-400">
      <% (hero_data["feature_highlights"] || ["Culturally Relevant Content", "Personalised Guidance", "Community-Led Stories"]).each do |feature| %>
        <span><%= feature %></span>
      <% end %>
    </div>
  </div>
</section>
