<%# locals: (emoji:, name:, location_age:, quote:, tags:) %>

<div class="bg-dada-card-light dark:bg-dada-card-dark shadow-md rounded-dada p-6 space-y-4">
  <div class="flex items-center space-x-3">
    <span class="text-3xl"><%= emoji %></span>
    <h3 class="text-xl font-semibold text-dada-text-light dark:text-dada-text-dark"><%= name %></h3>
  </div>
  <p class="text-dada-subtle dark:text-zinc-400"><%= location_age %></p>
  <blockquote class="text-dada-text dark:text-zinc-200 italic"><%= quote %></blockquote>
  <div class="flex flex-wrap gap‑2">
    <% tags.each do |t| %>
      <span class="bg‑dada-secondary text-dada-text px-2 py-1 rounded"><%= t %></span>
    <% end %>
  </div>
  <div class="text-yellow-500 font-semibold">★★★★★ Verified Story</div>
</div>
