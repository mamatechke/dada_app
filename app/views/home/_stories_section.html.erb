<% stories_data = @stories&.content_data || {} %>
<% stories = stories_data["stories"] || [] %>

<section class="py-12 bg-dada-background/40 dark:bg-[#1a1a1a]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Section Header -->
    <div class="text-center mb-12">
      <p class="text-sm uppercase text-dada-primary font-semibold tracking-wide">
        Sister Stories
      </p>
      <h2 class="text-3xl sm:text-4xl font-bold text-dada-text-light dark:text-dada-text-dark">
        <%= raw(stories_data["section_title"] || "Real Women, Real <span class='text-dada-primary'>Journeys</span>") %>
      </h2>
      <p class="mt-2 text-dada-subtle dark:text-zinc-400 max-w-2xl mx-auto text-sm sm:text-base">
        <%= stories_data["section_subtitle"] || "Discover how African women are navigating menopause with confidence, wisdom, and sisterhood support. Every story matters." %>
      </p>
    </div>

    <!-- Story Cards Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
      <% stories.each do |story| %>
        <div class="bg-dada-card-light dark:bg-dada-card-dark shadow-md hover:shadow-lg transition rounded-dada p-6 flex flex-col justify-between space-y-4">
          <div class="flex items-center space-x-3">
            <span class="text-3xl"><%= story["emoji"] %></span>
            <div>
              <h3 class="text-lg font-semibold text-dada-text-light dark:text-dada-text-dark"><%= story["name"] %></h3>
              <p class="text-sm text-dada-subtle dark:text-zinc-400"><%= story["location"] %></p>
            </div>
          </div>

          <blockquote class="text-sm italic text-dada-text dark:text-zinc-200 leading-relaxed">
            "<%= story["quote"] %>"
          </blockquote>

          <div class="flex flex-wrap gap-2">
            <% (story["tags"] || []).each do |tag| %>
              <span class="bg-dada-secondary/30 dark:bg-zinc-700 text-dada-primary text-xs font-semibold rounded-full px-3 py-1">
                <%= tag %>
              </span>
            <% end %>
          </div>

          <div class="text-dada-primary font-semibold text-sm pt-3 border-t border-gray-100 dark:border-zinc-700 flex items-center gap-1">
            <span class="text-base">â˜…</span><span class="tracking-tight">Verified Story</span>
          </div>
        </div>
      <% end %>
    </div>

    <!-- CTA Button -->
    <div class="mt-12 text-center">
      <% if user_signed_in? %>
        <%= link_to "Share Your Story",
                    new_web_content_path,
                    class: "inline-block
              bg-dada-primary text-white
              hover:bg-dada-accent
              dark:bg-dada-accent dark:hover:bg-dada-primary dark:text-dada-background
              font-semibold px-6 py-3 rounded-dada
              transition-colors duration-200 shadow-sm" %>
      <% else %>
        <%= link_to "Log in to Share Your Story",
                    new_user_session_path,
                    class: "inline-block
              border border-dada-primary text-dada-text
              text-dada-primary hover:bg-dada-primary hover:text-white
              font-semibold px-6 py-3 rounded-dada
              transition-colors duration-200 shadow-sm" %>
      <% end %>
    </div>
  </div>
</section>
