<section class="min-h-screen flex items-center justify-center bg-dada-background-light dark:bg-dada-background-dark px-4 py-12">
  <div class="w-full max-w-md bg-dada-card-light dark:bg-dada-card-dark rounded-dada shadow-lg p-8">
    <h2 class="text-2xl sm:text-3xl font-bold text-dada-text-light dark:text-dada-text-dark mb-4 text-center">
      Where are you in your menopause journey?
    </h2>
    <%= form_with url: web_onboarding_step3_path, method: :get, local: true, class: "space-y-4" do %>
      <% %w[Perimenopause Menopause Postâ€‘menopause Notâ€¯sure Ally].each do |stage| %>
        <label class="block cursor-pointer">
          <%= radio_button_tag :stage, stage, session[:stage] == stage, class: "mr-2" %>
          <span class="text-dada-text-light dark:text-dada-text-dark"><%= stage %></span>
        </label>
      <% end %>
      <%= hidden_field_tag :_turbo_frame, "onboarding" %> <!-- optional for Turbo frames -->
      <div class="mt-6">
        <%= submit_tag "Next", class: "w-full bg-dada-primary hover:bg-dada-accent text-white font-semibold px-6 py-3 rounded-dada transition" %>
      </div>
    <% end %>
  </div>
</section>
