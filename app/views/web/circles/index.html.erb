<div class="min-h-screen bg-dada-background-light dark:bg-dada-background-dark">
  <div class="max-w-5xl mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-dada-text-light dark:text-dada-text-dark mb-2">Community Circles</h1>
      <p class="text-dada-subtle dark:text-zinc-400">
        Safe, anonymous spaces to connect with others on similar journeys
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% @circles.each do |circle| %>
        <%= link_to web_circle_path(circle), class: "block bg-dada-card-light dark:bg-dada-card-dark rounded-dada shadow hover:shadow-lg transition p-6" do %>
          <div class="flex items-start justify-between mb-3">
            <h2 class="text-xl font-bold text-dada-text-light dark:text-dada-text-dark"><%= circle.name %></h2>
            <% if circle.stage_focus.present? %>
              <span class="text-xs bg-dada-secondary dark:bg-zinc-700 px-2 py-1 rounded">
                <%= circle.stage_focus %>
              </span>
            <% end %>
          </div>

          <p class="text-dada-subtle dark:text-zinc-400 mb-4">
            <%= circle.description %>
          </p>

          <div class="flex items-center text-sm text-dada-subtle dark:text-zinc-500 border-t border-gray-200 dark:border-zinc-700 pt-3">
            <span class="mr-4">
              <span class="font-semibold"><%= circle.member_count %></span> members
            </span>
            <span>
              <span class="font-semibold"><%= circle.post_count %></span> posts
            </span>
          </div>
        <% end %>
      <% end %>

      <% if @circles.empty? %>
        <div class="col-span-2 text-center py-12">
          <p class="text-dada-subtle dark:text-zinc-400 text-lg">No circles available yet.</p>
          <p class="text-dada-subtle dark:text-zinc-500 text-sm mt-2">Check back soon as we build our community!</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
