<div class="min-h-screen flex items-center justify-center bg-dada-background-light dark:bg-dada-background-dark p-4">
  <div class="bg-dada-card-light dark:bg-dada-card-dark shadow-lg rounded-dada p-8 w-full max-w-md">
    <h2 class="text-2xl font-bold text-dada-text-light dark:text-dada-text-dark mb-6 text-center">Welcome Back</h2>

    <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-dada-text-light dark:text-dada-text-dark" %>
        <%= f.email_field :email, autofocus: true, class: "mt-1 block w-full px-3 py-2 bg-white dark:bg-zinc-700 text-dada-text-light dark:text-dada-text-dark border border-gray-300 dark:border-zinc-600 rounded" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-sm font-medium text-dada-text-light dark:text-dada-text-dark" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 bg-white dark:bg-zinc-700 text-dada-text-light dark:text-dada-text-dark border border-gray-300 dark:border-zinc-600 rounded" %>
      </div>

      <div class="flex justify-between items-center mb-6">
        <%= f.check_box :remember_me, class: "mr-1" %>
        <%= f.label :remember_me, class: "text-sm text-dada-subtle dark:text-zinc-300" %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-dada-primary hover:underline" %>
      </div>

      <%= f.submit "Log in", class: "w-full bg-dada-primary hover:bg-dada-accent text-white font-semibold py-2 rounded" %>
    <% end %>

    <div class="text-center text-sm mt-4 text-dada-subtle">
      Donâ€™t have an account?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-dada-primary hover:underline" %>
    </div>
  </div>
</div>