<div class="min-h-screen flex items-center justify-center bg-dada-background dark:bg-dada-darkBg p-4">
  <div class="bg-white dark:bg-zinc-800 shadow-lg rounded-lg p-8 w-full max-w-md">
    <h2 class="text-2xl font-bold text-dada-text dark:text-white mb-6 text-center">Join Dada</h2>

    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
      <div class="mb-4">
        <%= f.label :name, class: "block text-sm font-medium text-dada-text dark:text-white" %>
        <%= f.text_field :name, class: "mt-1 block w-full px-3 py-2 bg-white dark:bg-zinc-700 text-dada-text dark:text-white border border-gray-300 dark:border-zinc-600 rounded" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-dada-text dark:text-white" %>
        <%= f.email_field :email, class: "mt-1 block w-full px-3 py-2 bg-white dark:bg-zinc-700 text-dada-text dark:text-white border border-gray-300 dark:border-zinc-600 rounded" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-dada-text dark:text-white" %>
        <%= f.password_field :password, class: "mt-1 block w-full px-3 py-2 bg-white dark:bg-zinc-700 text-dada-text dark:text-white border border-gray-300 dark:border-zinc-600 rounded" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-dada-text dark:text-white" %>
        <%= f.password_field :password_confirmation, class: "mt-1 block w-full px-3 py-2 bg-white dark:bg-zinc-700 text-dada-text dark:text-white border border-gray-300 dark:border-zinc-600 rounded" %>
      </div>

      <%= f.submit "Create Account", class: "w-full bg-dada-primary hover:bg-dada-accent text-white font-semibold py-2 rounded" %>
    <% end %>

    <div class="text-center text-sm mt-4 text-dada-subtle">
      Already have an account?
      <%= link_to "Log in", new_session_path(resource_name), class: "text-dada-primary hover:underline" %>
    </div>
  </div>
</div>
