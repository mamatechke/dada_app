<div class="space-y-6">
  <div>
    <%= f.label :section_title, "Section Title", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :section_title, value: section.content_data["section_title"], class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-dada-primary focus:border-dada-primary sm:text-sm" %>
    <p class="mt-1 text-sm text-gray-500">Use &lt;span class='text-dada-primary'&gt;word&lt;/span&gt; to highlight words</p>
  </div>

  <div>
    <%= f.label :section_subtitle, "Section Subtitle", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :section_subtitle, value: section.content_data["section_subtitle"], rows: 2, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-dada-primary focus:border-dada-primary sm:text-sm" %>
  </div>

  <div>
    <%= f.label :stories, "Stories (JSON format)", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :stories, value: JSON.pretty_generate(section.content_data["stories"] || []), rows: 20, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-dada-primary focus:border-dada-primary sm:text-sm font-mono text-xs" %>
    <p class="mt-1 text-sm text-gray-500">
      Format: Array of objects with emoji, name, location, quote, and tags fields.
      <a href="https://jsonlint.com/" target="_blank" class="text-dada-primary hover:underline">Validate JSON</a>
    </p>
  </div>
</div>
